<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shadowwingz.androidlifedemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_binder_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binder Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_layoutinflater_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LayoutInflater Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_layoutparams_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LayoutParams Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_setcontentview_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="setContentView Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_anr_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANR Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_memory_leak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内存泄漏 Demo"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_handler_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手写 Handler"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_custom_view_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义 View"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="事件分发"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_simple_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手写网络请求框架"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_systrace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Systrace 使用"
            android:textAllCaps="false"/>
    </LinearLayout>

</ScrollView>
